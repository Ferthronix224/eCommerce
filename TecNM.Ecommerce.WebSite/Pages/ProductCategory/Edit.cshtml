@page "{id:int}"
@model TecNM.Ecommerce.WebSite.Pages.ProductCategory.Edit

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1">
            <div class="col-md-10">
                <h2>Editing</h2>
                
                <form method="post">
                    <input type="hidden" asp-for="ProductCategory.Id"/>
                    <div class="form-group">
                        <label asp-for="ProductCategory.Name"></label>
                        <input asp-for="ProductCategory.Name" class="form-control" maxlength="45"/>
                        <span class="text-danger" asp-validation-for="ProductCategory.Name"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ProductCategory.Description"></label>
                        <input asp-for="ProductCategory.Description" class="form-control" maxlength="45"/>
                        <span class="text-danger" asp-validation-for="ProductCategory.Description"></span>
                    </div>
                    @if (Model.Errors.Count > 0)
                    {
                        
                    }
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-primary mr-3">Save</button>
                            <a class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>